<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="12dp"
    android:weightSum="1"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="@string/app_title"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textoContador"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="0"
            android:textSize="50sp"
            android:padding="2dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="@color/black">


        <Button
            android:id="@+id/botonIncremento"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/soft_green"
            android:text="+"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botonDecremento"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/soft_red"
            android:text="-"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botonReset"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/yellow"
            android:text="@string/reset"
            android:textSize="50sp"
            android:padding="2dp"/>


        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:hint="@string/introduce_valor"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:background="@color/black"


            />


    </LinearLayout>


</LinearLayout>