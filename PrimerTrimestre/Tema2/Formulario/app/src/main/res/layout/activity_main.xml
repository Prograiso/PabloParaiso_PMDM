<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/form"
        android:id="@+id/imagenFormulario"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Introduce nombre"
        android:id="@+id/editNombre"
        android:drawableStart="@drawable/user"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imagenFormulario"
        app:layout_constraintStart_toStartOf="@+id/imagenFormulario"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/editPass"
        android:hint="Introduce contraseña"
        android:drawableStart="@drawable/pass"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imagenFormulario"
        app:layout_constraintStart_toStartOf="@+id/imagenFormulario"
        app:layout_constraintTop_toBottomOf="@+id/editNombre" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/editMail"
        android:hint="Introduce mail"
        android:drawableStart="@drawable/correo"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imagenFormulario"
        app:layout_constraintStart_toStartOf="@+id/imagenFormulario"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/editMap"
        android:hint="Introduce direccion"
        android:drawableStart="@drawable/mapa"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imagenFormulario"
        app:layout_constraintStart_toStartOf="@+id/imagenFormulario"
        app:layout_constraintTop_toBottomOf="@+id/editMail" />

    <ImageView
        android:id="@+id/imagenPuesto"
        android:src="@drawable/puesto"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:drawablePadding="12dp"
        app:layout_constraintStart_toStartOf="@+id/editMap"
        app:layout_constraintTop_toBottomOf="@+id/editMap" />

    <Spinner
        android:entries="@array/perfiles"
        android:id="@+id/spinnerPuesto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/editMap"
        app:layout_constraintStart_toEndOf="@+id/imagenPuesto"
        app:layout_constraintTop_toBottomOf="@+id/editMap"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxExperiencia"
        android:text="Experiencia"
        app:layout_constraintEnd_toEndOf="@id/spinnerPuesto"
        app:layout_constraintTop_toBottomOf="@id/spinnerPuesto"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/grupoRadio"
        app:layout_constraintEnd_toEndOf="@id/checkBoxExperiencia"
        app:layout_constraintTop_toBottomOf="@id/checkBoxExperiencia">
        <RadioButton
            android:textSize="10sp"
            android:layout_marginEnd="12dp"
            android:text="Menos de 5 años"
            android:id="@+id/radioCinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radioMasCinco"
            android:text="Mas de 5 años"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RadioGroup>


    <Button
        android:id="@+id/botonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>